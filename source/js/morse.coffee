class Morse
  _code = {
    "a": "._",    "b": "_...",  "c": "_._.",  "d": "_..",
    "e": ".",     "f": ".._.",  "g": "__.",   "h": "....",
    "i": "..",    "j": ".___",  "k": "_._",   "l": "._..",
    "m": "__",    "n": "_.",    "o": "___",   "p": ".__.",
    "q": "__._",  "r": "._.",   "s": "...",   "t": "_",
    "u": ".._",   "v": "..._",  "w": ".__",   "x": "_.._",
    "y": "_.__",  "z": "__..",  " ": " ",
    "1": ".____", "2": "..___", "3": "...__", "4": "...._", "5": ".....",
    "6": "_....", "7": "__...", "8": "___..", "9": "____.", "0": "_____",
    ".": "._._._", ",": "__..__", "?": "..__..",  "'": ".____.",
    "/": "_.._.",  "(": "_.__.",  ")": "_.__._",  "&": "._...",
    ":": "___...", ";": "_._._.", "=": "_..._",   "+": "._._.",
    "-": "_...._", "_": "..__._", "\"": "._.._.", "$": "..._.._",
    "!": "_._.__", "@": ".__._."
  }

  decode: (codes_array) ->
    str = ''
    for code in codes_array
      for key, value of _code
        str += key if code is value
    str

  encode: (str) ->
    array = []
    for char in str.split ''
      array.push _code[char]
    array

